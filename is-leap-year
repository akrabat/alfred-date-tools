#!/usr/bin/env zsh

query=${1:-$(gdate "+%-Y")}

# Ensure year containers only digits and is no more than 4 digits long
if [[ -n ${query//[0-9]/} || ${#query} -gt 4 ]]; then
  cat << EOT
{
  "items": [
    {
      "title": "$1 is invalid"
    }
  ]
}
EOT
  exit
fi


# zero pad years with less than 4 digits
query=$(printf "%04d" $query)

# if 31 March of this year is the 61st day, then it's a leap year
message="$year is not a leap year"
if [ $(gdate -d "$year-03-01" +%-j) -eq 61 ]; then
    message="$year is a leap year"
fi

# print result for Alfred
cat << EOT
{
  "items": [
    {
      "title": "$message",
      "subtitle": "Press enter to paste or âŒ˜C to copy",
      "arg": "$message"     
    }
  ]
}
EOT
